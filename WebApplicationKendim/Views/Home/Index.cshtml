@{
    ViewData["Title"] = "Home Page";
}

<style>
    .background-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -2;
        object-fit: cover;
        filter: brightness(0.5);
    }

    .content {
        color: white;
        font-size: 4em;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /* Değiştirme butonlarını konumlandırmak için CSS */
    .carousel-control-prev,
    .carousel-control-next {
        top: 50%;
        transform: translateY(-50%);
        z-index: 1; /* Diğer içeriğin üzerinde olması için */
    }

    .carousel-control-prev {
        left: 0;
    }

    .carousel-control-next {
        right: 0;
    }

    /* Okları ortalamak için CSS */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        margin-top: 325%; /* Okun yüksekliğinin yarısı kadar yukarı kaydır */
    }
</style>

<div class="text-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
        <!-- Otomatik geçiş için data-bs-ride ve data-bs-interval özelliklerini ekledik -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/kutuphanee.jpg" class="d-block w-100 background-image">
            </div>
            <div class="carousel-item">
                <img src="~/img/library2.jpg" class="d-block w-100 background-image">
            </div>
            <div class="carousel-item">
                <img src="~/img/library3.jpg" class="d-block w-100 background-image">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="content">
        <br />
        <h2><strong>ONLİNE KÜTÜPHANE</strong></h2>
    </div>
</div>